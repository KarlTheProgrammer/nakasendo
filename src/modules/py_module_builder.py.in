#!/usr/bin/env python3
import sys
from distutils.core import setup, Extension

module1 = Extension('${PY_MODULE_NAME}',
                    define_macros = [('SDK_MAJOR_VERSION', '${SDK_VERSION_MAJOR}'), ('SDK_VERSION_MINOR', '${SDK_VERSION_MINOR}'), ('SDK_VERSION_PATCH', '${SDK_VERSION_PATCH}'), ('Python_VERSION_MAJOR', '${Python_VERSION_MAJOR}'), ('Python_VERSION_MINOR', '${Python_VERSION_MINOR}')],
                    include_dirs  = [${PY_LIST_INCLUDE_DIRS}]      , # Python list, single quoted, comma separation
                    libraries     = [${PY_LIST_NATIVE_LIBRARIES}]  , # Python list, single quoted, comma separation
                    extra_objects = [${PY_LIST_LIBRARIES}]         , # Python list, single quoted, comma separation
                    sources       = [${PY_LIST_SOURCE_FILES}]      , # Python list, single quoted, comma separation
)

setup(name = '${PY_MODULE_NAME}',
      version = '${SDK_VERSION_MAJOR}.${SDK_VERSION_MINOR}.${SDK_VERSION_PATCH}',
      description = 'Python demo',
      author = 'Murphy',
      author_email = 'j.murphy@nchain.com',
      url = 'https://docs.python.org/extending/building',
      long_description = 'This is really just a demo package',
     ext_modules = [module1]
)

